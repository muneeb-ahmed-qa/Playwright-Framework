# Playwright Automation Framework - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# ENCRYPTION CONFIGURATION
# =============================================================================
# Generate a secure 32-character encryption key
# Run: npm run generate-password to create a secure key
ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Base URL for your application
BASE_URL=https://example.com

# API Configuration
API_BASE_URL=https://api.example.com
API_TOKEN=your-api-token-here
API_TIMEOUT=10000

# =============================================================================
# TEST CONFIGURATION
# =============================================================================
# Test environment
NODE_ENV=test

# Test execution settings
TIMEOUT=30000
RETRIES=2
WORKERS=4
HEADLESS=true
SLOW_MO=0

# =============================================================================
# ENCRYPTED TEST CREDENTIALS
# =============================================================================
# These should be encrypted passwords generated by the framework
# Run: npm run setup:credentials to generate encrypted passwords

# Admin User Credentials
ADMIN_USERNAME=admin@example.com
ENCRYPTED_ADMIN_PASSWORD=encrypted-admin-password-here

# Regular User Credentials
USER_USERNAME=user@example.com
ENCRYPTED_USER_PASSWORD=encrypted-user-password-here

# Guest User Credentials
GUEST_USERNAME=guest@example.com
ENCRYPTED_GUEST_PASSWORD=encrypted-guest-password-here

# =============================================================================
# GMAIL API CONFIGURATION
# =============================================================================
# Google API credentials for Gmail integration
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback

# Encrypted Gmail API tokens (generated after OAuth flow)
ENCRYPTED_GOOGLE_ACCESS_TOKEN=encrypted-access-token-here
ENCRYPTED_GOOGLE_REFRESH_TOKEN=encrypted-refresh-token-here

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================
# Test reporting paths
REPORT_PATH=playwright-report
SCREENSHOT_PATH=screenshots
VIDEO_PATH=videos

# =============================================================================
# PERFORMANCE TESTING
# =============================================================================
# Performance thresholds (in milliseconds)
PERF_LCP_THRESHOLD=2500
PERF_FID_THRESHOLD=100
PERF_CLS_THRESHOLD=0.1
PERF_FCP_THRESHOLD=1800
PERF_TTI_THRESHOLD=3800

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
# CI environment detection
CI=false

# Test execution in CI
UPDATE_SNAPSHOTS=false
START_SERVER=false

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================
# Uncomment and modify for different environments

# # Staging Environment
# ENVIRONMENT=staging
# BASE_URL=https://staging.example.com
# API_BASE_URL=https://staging-api.example.com

# # Production Environment
# ENVIRONMENT=production
# BASE_URL=https://example.com
# API_BASE_URL=https://api.example.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Security settings
IGNORE_HTTPS_ERRORS=true
ALLOW_INSECURE_REQUESTS=false

# =============================================================================
# DEBUGGING CONFIGURATION
# =============================================================================
# Debug settings
DEBUG=false
VERBOSE_LOGGING=false
TRACE_ON_FIRST_RETRY=true
